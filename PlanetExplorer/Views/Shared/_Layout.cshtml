@RenderSection("Scripts", required: false)

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script> 

    <!-- UIkit CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.17.11/dist/css/uikit.min.css" /> 

    <!-- UIkit JS -->
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.17.11/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.17.11/dist/js/uikit-icons.min.js"></script> 

    <title>Galactic Getaways</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PlanetExplorer.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="uk-navbar-container">
            <div class="bg-purple">
                <div uk-navbar="mode: click">

                    <div class="uk-navbar-left uk-margin-medium-left">
                        <a class="uk-navbar-item uk-logo" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/images/logo.png" alt="Avatar Logo" style="width:250px;">
                        </a>
                    </div>

                    <div class="uk-navbar-right uk-margin-medium-right">
                        <ul class="uk-navbar-nav uk-visible@m">
                            <li class="uk-active"><a asp-area="" asp-controller="Home" asp-action="Index" class="uk-navbar-item uk-text-primary">Home</a></li>
                            <li><a asp-area="" asp-controller="Book" asp-action="Book" class="uk-navbar-item uk-text-primary">Book</a></li>
                            <li><a asp-area="" asp-controller="Explore" asp-action="Explore" class="uk-navbar-item uk-text-primary">Explore</a></li>
                            <li><partial name="_LoginPartial"/></li>
                        </ul>

                        <ul class="uk-navbar-nav uk-hidden@m">
                            <li>
                                <a class="uk-navbar-toggle" uk-navbar-toggle-icon href="#"></a>
                                <div class="uk-navbar-dropdown" style="background-color: #c8b3fc;">
                                    <ul class="uk-nav uk-navbar-dropdown-nav">
                                        <li class="uk-active"><a asp-area="" asp-controller="Home" asp-action="Index" class="uk-navbar-item uk-text-primary">Home</a></li>
                                        <li><a asp-area="" asp-controller="Book" asp-action="Book" class="uk-navbar-item uk-text-primary">Book</a></li>
                                        <li><a asp-area="" asp-controller="Explore" asp-action="Explore" class="uk-navbar-item uk-text-primary">Explore</a></li>
                                        <li><partial name="_LoginPartial"/></li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </nav>
    </header>
   

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  <footer class="bg-dark text-white text-center py-4 mt-auto">
    <div class="container">
      <p>&copy; 2023 Galaxy Gataways</p>
      <p>Your passage to a galaxy far, far away</p>
    </div>
  </footer>
</body>
</html>
