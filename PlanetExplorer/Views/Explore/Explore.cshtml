@model IEnumerable<Planet>

@{
	ViewData["Title"] = "Explore";
}

<link rel="stylesheet" href="~/css/Explore.css" asp-append-version="true" />

<div class="container mt-3">
	<div class="overlay">
	  <img src="~/images/space.png" class="rounded" alt="Snow" style="width:100%; height: 150px; object-fit: cover;">
	  <h1 class="centered text-white text-outline">@ViewData["Title"]</h1>
	  <h3 class="lower text-white text-outline">The Galaxy</h3>
	</div>
</div>

<div class="container mt-3">
	<div class="row">
		@foreach (var obj in Model)
		{
		<div class="col-sm-4">
			<a class="nav-link" asp-area="" asp-controller="Explore" asp-action="Planet" asp-route-id="@obj.planet_id">
			<div class="container mt-3 grey">
				<div class="card img-fluid" style="width:100%;">
						<img class="card-img-top" src="~/@obj.planet_image" alt="Planet image" style="width:100%; height: 200px; object-fit: cover;">
					<div class="card-img-overlay d-flex flex-column justify-content-end">
					  <h3 class="text-white text-center text-outline">@obj.planet_name</h3>
					</div>
				</div>
			</div>
			</a>
		</div>
		}
	</div>

</div>


